<div class="auth-container">
    <h2>Cadastre-se</h2>
    <form action="/register" method="POST">
        <div class="form-control">
            <label for="name">Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" required>  
        </div>
        <div class="form-control">
            <label for="email">E-mail</label>
            <input type="email" name="email" placeholder="Digite o seu e-mail" required>  
        </div>
        <div class="form-control">
            <label for="password">Senha</label>
            <input type="password" name="password" placeholder="Digite uma senha" required>  
        </div>
        <div class="form-control">
            <label for="passwordconfirm">Confirmação de Senha</label>
            <input type="password" name="passwordconfirm" placeholder="Digite a senha novamente" required>  
        </div>
        <input type="submit" value="Cadastrar">
        <p>Já tem uma conta? <a href="/login">Clique aqui</a></p> 
    </form>
</div>