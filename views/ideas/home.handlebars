<div class="home-header">
    <h1>Ideias</h1>
    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    {{#if search}}
        <p>Você buscou por "<span>{{search}}</span>" e o sistema encontrou <span>{{ideasQty}}</span> resultado(s)</p>
    {{/if}} 
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button> 
        </form>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button> 
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="ideas-container">
    {{#each ideas}}
        <figure>
            <blockquote>
                "{{this.description}}"
            </blockquote>
            <figcaption><span>por {{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>
